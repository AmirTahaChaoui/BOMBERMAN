<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bomberman.controller.GameControllerTheme1">
    <top>
        <VBox styleClass="header">
            <children>

                <HBox alignment="CENTER" prefHeight="40.0" spacing="20.0" styleClass="timer-section">
                    <children>
                        <Label fx:id="timerLabel" text="02:00" styleClass="timer-display">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="60.0" spacing="10.0" styleClass="controls">
                    <children>
                        <Button fx:id="startButton" onAction="#startGame" text="Démarrer" />
                        <Button fx:id="pauseButton" onAction="#pauseGame" text="Pause" />
                        <Button fx:id="resetButton" onAction="#resetGame" text="Reset" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <StackPane fx:id="gameArea" styleClass="game-area">
            <children>
                <!-- Ici sera placé le plateau de jeu -->
                <GridPane fx:id="gameGrid" alignment="CENTER" styleClass="game-grid">
                </GridPane>
            </children>
        </StackPane>
    </center>
</BorderPane>